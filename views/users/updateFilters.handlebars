<div>
    <form id="filtersForm" method="post">
        <h2 class="neon">UPDATE FILTERS</h2>
        <div id="locationContainer">
            <h2>Who are you interested in?</h2>
            <div id="filtersBorder" class="slideContainer">
                <div id="genderInterestBorder">
                    <label id="genderInterestLabel">Who are you interested in?</label>
                    <div class="multipleInputContainer">
                        <select id="genderInterest" name="genderInterest" required>
                            <option disabled="disabled" selected="selected">{{genderInterest}}</option>
                            <option value="men">Men</option>
                            <option value="women">Women</option>
                            <option value="everyone">Everyone</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="slideContainer">
                <label for="minAge">Min Age: </label>
                <label id="minAgeLabel" for="minAge"></label>
                <input type="range" min="18" max="60" value={{minAge}} class="slider" id="minAge">
            </div>
            <div class="slideContainer">
                <label for="maxAge">Max Age: </label>
                <label id="maxAgeLabel" for="maxRange"></label>
                <input type="range" min="18" max="60" value={{maxAge}} class="slider" id="maxAge">
            </div>
            <div class="slideContainer">
                <label for="maxDistance">Max Distance: </label>
                <label id="maxDistanceLabel" for="maxDistance"></label>
                <input type="range" min="1" max="100" value={{maxDistance}} class="slider" id="maxDistance">
            </div>
            <div class="form-group hidden" id="error-container">
                <div class="alert alert-danger text-goes-here">
                </div>
            </div>
            <button type="submit" class="homepage-buttons">Save</button><br>
            <a href="/users/dashboard" class="redirect-to-login">Back to dashboard</a>
        </div>
        <input name= '_method' value="patch" type="hidden"/>
    </form>
</div>
